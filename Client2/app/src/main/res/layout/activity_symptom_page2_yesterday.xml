<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="5dp"
    android:paddingTop="5dp"
    android:paddingRight="5dp"
    android:paddingBottom="5dp">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textColor="#000000"
        android:text="生理資料輸入-昨天"
        android:layout_margin="15dp"
        android:textSize="38dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_nose_symptom4"
            android:layout_width="135dp"
            android:layout_height="wrap_content"
            android:text="流鼻涕症狀"
            android:textSize="18dp"
            android:textColor="#000000"
            android:layout_margin="10dp" />
        <Spinner
            android:id="@+id/spinner_nose_symptom4"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="#c8cccb"
            android:layout_margin="10dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_eye_symptom"
            android:layout_width="135dp"
            android:layout_height="wrap_content"
            android:text="眼睛症狀"
            android:textSize="18dp"
            android:textColor="#000000"
            android:layout_margin="10dp" />
        <Spinner
            android:id="@+id/spinner_eye_symptom"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="#c8cccb"
            android:layout_margin="10dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_skin_symptom"
            android:layout_width="135dp"
            android:layout_height="wrap_content"
            android:text="皮膚症狀"
            android:textSize="18dp"
            android:textColor="#000000"
            android:layout_margin="10dp" />
        <Spinner
            android:id="@+id/spinner_skin_symptom"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="#c8cccb"
            android:layout_margin="10dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_asthma"
            android:layout_width="135dp"
            android:layout_height="wrap_content"
            android:text="氣喘治療情況"
            android:textSize="18dp"
            android:textColor="#000000"
            android:layout_margin="10dp" />
        <Spinner
            android:id="@+id/spinner_asthma"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="#c8cccb"
            android:layout_margin="10dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_a_rhinitis"
            android:layout_width="135dp"
            android:layout_height="wrap_content"
            android:text="鼻炎治療情況"
            android:textSize="18dp"
            android:textColor="#000000"
            android:layout_margin="10dp" />
        <Spinner
            android:id="@+id/spinner_a_rhinitis"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="#c8cccb"
            android:layout_margin="10dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_a_conjunctivitis"
            android:layout_width="135dp"
            android:layout_height="wrap_content"
            android:text="結膜炎治療情況"
            android:textSize="18dp"
            android:textColor="#000000"
            android:layout_margin="10dp" />
        <Spinner
            android:id="@+id/spinner_a_conjunctivitis"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="#c8cccb"
            android:layout_margin="10dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_a_dermatitis"
            android:layout_width="135dp"
            android:layout_height="wrap_content"
            android:text="皮炎治療情況"
            android:textSize="18dp"
            android:textColor="#000000"
            android:layout_margin="10dp" />
        <Spinner
            android:id="@+id/spinner_a_dermatitis"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="#c8cccb"
            android:layout_margin="10dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_miss_notice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:textColor="#f20505" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="bottom"
        android:paddingLeft="5dp"
        android:paddingTop="5dp"
        android:paddingRight="5dp"
        android:paddingBottom="5dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btn_page1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#84c1ff"
                android:text="上一頁" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                >

                <Button
                    android:id="@+id/btn_home"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#84c1ff"
                    android:text="完成" />
            </LinearLayout>

        </LinearLayout>
        <Button
            android:id="@+id/btn_home_real"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_gravity="center"

            android:background="@drawable/button_rounde"
            android:drawableLeft="@drawable/ic_launcher"
            />
    </LinearLayout>

</LinearLayout>