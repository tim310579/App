<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowActivityTransitions">true</item>

        <item name="android:windowEnterTransition">@transition/loading_anim</item>
        <item name="android:windowExitTransition">@transition/loading_anim</item>

        <item name="android:windowSharedElementEnterTransition">@transition/loading_anim</item>
        <item name="android:windowSharedElementExitTransition">@transition/loading_anim</item>
    </style>

</resources>