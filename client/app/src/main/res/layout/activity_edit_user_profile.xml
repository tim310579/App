<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff"
    android:paddingLeft="5dp"
    android:paddingTop="5dp"
    android:paddingRight="5dp"
    android:paddingBottom="5dp">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:layout_gravity="center"
        android:textColor="#000000"
        android:text="個人資料設定"
        android:textSize="38dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/mEdit_gender"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:text="性別            "
            android:textColor="#000000"
            android:layout_margin="10dp"/>
        <Spinner
            android:id="@+id/spinner_gender"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="#c8cccb"
            android:layout_margin="10dp"
            android:text="gender"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_ID_number"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:text="使用者名稱"
            android:textColor="#000000"
            android:layout_margin="10dp"/>

        <EditText
            android:id="@+id/mEdit_ID_number"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_margin="10dp"
            android:background="#c8cccb"
            android:hint=" Enter Username"
            android:textColor="#000000"
            android:textSize="18dp" />
    </LinearLayout >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_age"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:text="年齡            "
            android:textColor="#000000"
            android:layout_margin="10dp"/>

        <EditText
            android:id="@+id/mEdit_age"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:textColor="#000000"
            android:textSize="18dp"
            android:hint=" Enter age(number)"
            android:background="#c8cccb"
            android:layout_margin="10dp"

            />
    </LinearLayout >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_height"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:text="身高            "
            android:textColor="#000000"
            android:layout_margin="10dp"/>

        <EditText
            android:id="@+id/mEdit_height"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:textColor="#000000"
            android:textSize="18dp"
            android:hint=" Enter height(cm)"
            android:background="#c8cccb"
            android:layout_margin="10dp"
            />
    </LinearLayout >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_weight"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:text="體重            "
            android:textColor="#000000"
            android:layout_margin="10dp"/>

        <EditText
            android:id="@+id/mEdit_weight"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:textColor="#000000"
            android:textSize="18dp"
            android:hint=" Enter weight(kg)"
            android:background="#c8cccb"
            android:layout_margin="10dp"
            />
    </LinearLayout >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_city"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:text="縣市            "
            android:textColor="#000000"
            android:layout_margin="10dp"/>
        <Spinner
            android:id="@+id/spinner"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="#c8cccb"
            android:layout_margin="10dp"/>
    </LinearLayout>

        <Button
            android:id="@+id/edit_OK"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"

            android:layout_margin="30dp"
            android:background="#84c1ff"
            android:text="儲存" />

