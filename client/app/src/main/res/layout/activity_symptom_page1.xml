<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="5dp"
        android:paddingTop="5dp"
        android:paddingRight="5dp"
        android:paddingBottom="5dp">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="生理資料輸入-今天"
            android:textColor="#000000"
            android:layout_margin="15dp"
            android:textSize="38dp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_date"
                    android:layout_width="135dp"
                    android:layout_height="wrap_content"
                    android:text="日期 "
                    android:textSize="18dp"
                    android:textColor="#000000"
                    android:layout_margin="10dp"/>
            <TextView
                android:id="@+id/tv_today_date"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_margin="10dp"

                android:background="#c8cccb"
                android:textColor="#000000"
                android:textSize="18dp"/>

            <TextView
                android:id="@+id/dateText"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_margin="10dp"
                android:background="#c8cccb"
                android:textColor="#000000"
                android:textSize="18dp"
            />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_day_rec"
                android:layout_width="135dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="日間呼氣流量"
                android:textColor="#000000"
                android:textSize="18dp" />

            <EditText
                android:id="@+id/mEdit_day_rec"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_margin="10dp"
                android:background="#c8cccb"
                android:hint=" Enter day record"
                android:textColor="#000000"
                android:textSize="18dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_night_rec"
                android:layout_width="135dp"
                android:layout_height="wrap_content"
                android:text="昨晚呼氣流量"
                android:textSize="18dp"
                android:textColor="#000000"
                android:layout_margin="10dp"/>

            <EditText
                android:id="@+id/mEdit_night_rec"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_margin="10dp"
                android:background="#c8cccb"
                android:hint=" Enter night record"
                android:textColor="#000000"
                android:textSize="18dp" />
        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_day_symptom"
            android:layout_width="135dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="日間咳嗽情況"
            android:textColor="#000000"
            android:textSize="18dp" />
        <Spinner
            android:id="@+id/spinner_day_symptom"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="#c8cccb"
            android:layout_margin="10dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_night_symptom"
            android:layout_width="135dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="昨晚咳嗽情況"
            android:textColor="#000000"
            android:textSize="18dp" />
        <Spinner
            android:id="@+id/spinner_night_symptom"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="#c8cccb"
            android:layout_margin="10dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_nose_symptom1"
            android:layout_width="135dp"
            android:layout_height="wrap_content"
            android:text="鼻子癢症狀"
            android:textSize="18dp"
            android:textColor="#000000"
            android:layout_margin="10dp" />
        <Spinner
            android:id="@+id/spinner_nose_symptom1"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="#c8cccb"
            android:layout_margin="10dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_nose_symptom2"
            android:layout_width="135dp"
            android:layout_height="wrap_content"
            android:text="打噴嚏症狀"
            android:textSize="18dp"
            android:textColor="#000000"
            android:layout_margin="10dp" />
        <Spinner
            android:id="@+id/spinner_nose_symptom2"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="#c8cccb"
            android:layout_margin="10dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_nose_symptom3"
            android:layout_width="135dp"
            android:layout_height="wrap_content"
            android:text="鼻塞症狀"
            android:textSize="18dp"
            android:textColor="#000000"
            android:layout_margin="10dp" />
        <Spinner
            android:id="@+id/spinner_nose_symptom3"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="#c8cccb"
            android:layout_margin="10dp" />
    </LinearLayout>


    <TextView
        android:id="@+id/tv_miss_notice"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:textColor="#f20505" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="bottom"
        android:paddingLeft="5dp"
        android:paddingTop="5dp"
        android:paddingRight="5dp"
        android:paddingBottom="5dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btn_page0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#84c1ff"
                android:text="上一頁" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                >

                <Button
                    android:id="@+id/btn_page2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#84c1ff"
                    android:text="下一頁" />
            </LinearLayout>

        </LinearLayout>
            <Button
                android:id="@+id/btn_home"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_gravity="center"
                android:background="@drawable/button_rounde"
                android:drawableLeft="@drawable/ic_launcher"
                />


    </LinearLayout>
</LinearLayout>